{
  "extends": "airbnb-base",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "blockBindings": true,
      "classes": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "es6": true
    }
  },
  "rules": {
    "strict": 0,
    "block-scoped-var": 0,      // disabled due to a possible bug in babel-eslint
    "padded-blocks": 0,         // disabled for test/* until babel/babel-eslint#33 is resolved
    "no-redeclare": 0,          // disabled due to apparent regression in eslint (falsely identifies rest spread operator as redeclaration)
    "no-unused-expressions": 0, // disabled until we find a better solution for ignoring chai's property assersion syntax
    "comma-dangle": 0,
    "class-methods-use-this": 0,
    "quotes": [2, "single"],
    "import/default": 0,
    "import/no-duplicates": 2,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "import/prefer-default-export": 0,
    "jsx-quotes": 0,
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-alert": 2,
    "id-length": [2, {"min": 2, "exceptions": ["i", "_", "a", "b", "c"]}],
    "max-len": [2, 350],
    "prefer-arrow-callback": 0,
    "prefer-template": 0,
    "arrow-body-style": 0,
    "no-underscore-dangle": 2,
    "no-param-reassign": 0,
    "no-restricted-syntax": 0,
    "global-require": 0,
    "quote-props": 2,
    "no-confusing-arrow": 0,
    "object-shorthand": 0,
    "consistent-return": 1,
    "array-callback-return": 0,
    "object-curly-spacing": 0,
    "no-mixed-spaces-and-tabs": 2,
    "jsx-a11y/img-has-alt": 0,
    "no-useless-escape": 0,
    "block-spacing": 0,
    "arrow-spacing": 0,
    "no-unneeded-ternary": 0,
    "import/export": 0,
    "no-case-declarations": 0,
    "prefer-rest-params": 0,
    "no-class-assign": 0,
    "no-duplicate-imports": 2,
    "no-return-assign": 0,
    "space-in-parens": 0,
    "semi": 2,
    "no-use-before-define": 0,
    "arrow-parens": 0,
    "linebreak-style": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-uses-react": 2, // Prevent React to be incorrectly marked as unused
    "react/jsx-uses-vars": 2, // Prevent variables used in JSX to be incorrectly marked as unused
    "react/jsx-no-bind": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-equals-spacing": 0,
    "react/jsx-space-before-closing": 0,
    "react/sort-comp": 0
  },
  "plugins": [
    "import",
    "react"
  ],
  "parser": "babel-eslint",
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules"]
    }
  },
  "globals": {
    "node": true,
    "expect": true,
    "jest": true,
    "ga": true
  }
}
